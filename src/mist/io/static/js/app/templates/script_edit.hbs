<!-- Popup Wrapper -->
<div id="script-edit-popup"
    class="small-popup"
    data-role="popup"
    data-overlay-theme="b"
    data-transition="slideup">

    <!-- Popup -->

    <div id="script-edit"
         class="mid-popup
            ui-popup
            ui-body-a
            ui-overlay-shadow
            ui-corner-all"
         data-role="popup"
         data-enhanced="true"
         data-transition="flip">

         <!-- Header -->

        <div class="ui-header ui-bar-b ui-caps">
            <h1 class="ui-title">Edit script</h1>

            <a href="javascript:void(0)" class="close" data-rel="back">&#10005;</a>
        </div>

        <!-- Body -->

        <div role="main" class="ui-content" data-theme="a">

            <!-- New cloud name text field -->
            <form {{action "saveClicked" on="submit" target=view}}>
                <div class="form-field {{if Mist.scriptEditController.newName 'filled' 'empty'}} required">
                    <label for="script-edit-new-name">Name</label>
                    {{view Mist.TextField
                        id="script-edit-new-name"
                        value=Mist.scriptEditController.newName}}
                </div>

                <div class="form-field">
                    <label for="script-edit-new-description">Description (optional)</label>
                    {{view Mist.TextArea
                        id="script-edit-new-description"
                        value=Mist.scriptEditController.newDescription}}
                </div>

                {{#if Mist.scriptsController.renamingScript}}
                    <div class="ajax-loader"></div>
                {{/if}}

                <div class="ok-cancel" data-role="controlgroup" data-type="horizontal" >
                    <button type="submit" id="script-edit-ok"
                        class="ui-btn ui-btn-d ui-caps">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
