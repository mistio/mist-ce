<label>
    {{#if view.network.cloud.isOpenStack}}
        {{view Mist.Checkbox checkedBinding="view.network.selected"}}
    {{else}}
        {{view Mist.Checkbox checkedBinding="view.network.selected" data-disabled="true"}}
    {{/if}}
</label>
{{#link-to "network" view.network}}

    <div class="ui-grid-b">
        <div class="ui-block-a network-name">{{view.network.name}}</div>
        <div class="ui-block-b">{{view.network.status}}</div>
        <div class="ui-block-c key-tags">
            <span class="tag">{{view.network.cloud.title}}</span>
        </div>
    </div>

{{/link-to}}
