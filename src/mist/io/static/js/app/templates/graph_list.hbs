{{#if Mist.graphsController.isOpen}}
<div class="graph-list">
    <!--
        Control Widget
    -->
    {{#if Mist.graphsController.config.canControl}}
        <div id="top-history">
            {{view "graphListControl"
                actionProxyBinding="view.actionProxy"}}
        </div>
    {{/if}}

    <!--
        Graphs
    -->

    <div id="graphs">
        {{#each Mist.graphsController.content}}
            {{view "graphListItem"
                graphBinding="this"
                actionProxyBinding="view.actionProxy"}}
        {{/each}}
    </div>

    <!--
        Minimized graph buttons
    -->

    {{#if Mist.graphsController.config.canMinimize}}
        {{view "graphListBar"
            actionProxyBinding="view.actionProxy"}}
    {{/if}}
</div>
{{/if}}
